{
  "name": "vscode-ai-assistant",
  "displayName": "VSCODE AI Assistant",
  "description": "AI对话助手，支持多种模型配置和MCP接入",
  "publisher":"leaper",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/leaper-mcp/vscode-ai-assistant.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [
    "onCommand:aiChat.openChat",
    "onCommand:aiChat.configureSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiChat.openChat",
        "title": "打开AI对话",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiChat.configureSettings",
        "title": "配置AI设置"
      },
      {
        "command": "aiChat.clearHistory",
        "title": "清空对话历史"
      },
      {
        "command": "aiChat.mcp.listServers",
        "title": "列出MCP服务器"
      },
      {
        "command": "aiChat.mcp.reconnectServer",
        "title": "重连MCP服务器"
      },
      {
        "command": "aiChat.mcp.showOutput",
        "title": "显示MCP输出"
      }
    ],
    "views": {
      "aiChat": [
        {
          "id": "aiChatView",
          "name": "AI对话",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiChat",
          "title": "AI对话助手",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "configuration": {
      "title": "VSCODE AI Assistant",
      "properties": {
        "aiChat.apiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "AI模型API基础地址"
        },
        "aiChat.apiKey": {
          "type": "string",
          "default": "",
          "description": "API密钥",
          "scope": "application"
        },
        "aiChat.modelName": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "模型名称"
        },
        "aiChat.customHeaders": {
          "type": "string",
          "default": "{}",
          "description": "自定义HTTP请求头（JSON格式），例如{\"User-Agent\": \"MyApp\", \"X-Custom\": \"value\"}",
          "scope": "application"
        },
        "aiChat.customBodyFields": {
          "type": "string",
          "default": "{}",
          "description": "自定义请求体字段（JSON格式），会与默认字段合并发送",
          "scope": "application"
        },
        "aiChat.overrideDefaultBody": {
          "type": "boolean",
          "default": false,
          "description": "是否完全覆盖默认请求体。开启后，将只发送自定义body字段"
        },
        "aiChat.enableStream": {
          "type": "boolean",
          "default": true,
          "description": "启用流式响应，可以实时看到AI的回复过程"
        },
        "aiChat.enableTools": {
          "type": "boolean",
          "default": false,
          "description": "启用工具调用功能，允许AI使用文件操作等工具"
        },
        "aiChat.systemRole": {
          "type": "string",
          "default": "",
          "description": "AI助手角色设定，会作为系统消息添加到对话开头，例如：你现在是一个开发专家",
          "scope": "application"
        },
        "aiChat.mcpServers": {
          "type": "string",
          "default": "[]",
          "description": "MCP服务器配置列表（JSON数组格式），例如[{\"name\":\"memory\",\"type\":\"stdio\",\"stdio\":{\"command\":\"npx\",\"args\":[\"-y\",\"@modelcontextprotocol/server-memory\"],\"env\":{\"MEMORY_FILE_PATH\":\"${workspaceFolder}/memory.jsonl\"}}}]",
          "scope": "application"
        }
      }
    },
    "keybindings": [
      {
        "command": "aiChat.openChat",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiChat.configureSettings",
          "when": "view == aiChatView",
          "group": "navigation"
        },
        {
          "command": "aiChat.clearHistory",
          "when": "view == aiChatView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile:webview": "tsc --project tsconfig.webview.json",
    "build": "npm run build:webview && npm run compile",
    "build:webview": "vite build",
    "dev:webview": "vite build --watch",
    "prepackage": "rimraf out && npm run build",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/eventsource": "^3.0.0",
    "@types/node": "18.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^4.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.4",
    "vite": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "eventsource": "^3.0.7",
    "marked": "^9.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
