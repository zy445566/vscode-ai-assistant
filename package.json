{
  "name": "vscode-ai-assistant",
  "displayName": "VSCODE AI Assistant",
  "description": "AI对话助手，支持多种模型配置和MCP接入",
  "publisher": "leaper",
  "version": "0.0.10",
  "repository": {
    "type": "git",
    "url": "https://github.com/leaper-mcp/vscode-ai-assistant.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [
    "onCommand:aiChat.openChat",
    "onCommand:aiChat.configureSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiChat.openChat",
        "title": "打开AI对话",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiChat.configureSettings",
        "title": "配置AI设置"
      },
      {
        "command": "aiChat.clearHistory",
        "title": "清空对话历史"
      },
      {
        "command": "aiChat.mcp.listServers",
        "title": "列出MCP服务器"
      },
      {
        "command": "aiChat.mcp.reconnectServer",
        "title": "重连MCP服务器"
      },
      {
        "command": "aiChat.mcp.showOutput",
        "title": "显示MCP输出"
      },
      {
        "command": "aiChat.mcp.addServer",
        "title": "添加MCP服务器"
      },
      {
        "command": "aiChat.mcp.editServer",
        "title": "编辑MCP服务器"
      },
      {
        "command": "aiChat.mcp.removeServer",
        "title": "删除MCP服务器"
      }
    ],
    "views": {
      "aiChat": [
        {
          "id": "aiChatView",
          "name": "AI对话",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiChat",
          "title": "AI对话助手",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "configuration": {
      "title": "VSCODE AI Assistant",
      "properties": {
        "aiChat.apiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "AI模型API基础地址",
          "examples": [
            "https://api.openai.com/v1",
            "https://api.anthropic.com/v1",
            "https://api.moonshot.cn/v1",
            "https://dashscope.aliyuncs.com/compatible-mode/v1",
            "https://api.deepseek.com/v1",
            "https://api.siliconflow.cn/v1"
          ]
        },
        "aiChat.apiKey": {
          "type": "string",
          "default": "",
          "description": "API密钥",
          "scope": "application"
        },
        "aiChat.modelName": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "模型名称",
          "examples": [
            "gpt-3.5-turbo",
            "gpt-4",
            "gpt-4-turbo",
            "gpt-4o",
            "gpt-4o-mini",
            "claude-3-sonnet",
            "claude-3-opus",
            "claude-3-haiku"
          ]
        },
        "aiChat.temperature": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 2,
          "description": "生成文本的随机性，0表示最确定，2表示最随机"
        },
        "aiChat.maxTokens": {
          "type": "number",
          "default": 5000,
          "minimum": 1,
          "maximum": 32768,
          "description": "生成文本的最大长度"
        },
        "aiChat.customHeaders": {
          "type": "object",
          "default": {},
          "description": "自定义HTTP请求头",
          "scope": "application",
          "additionalProperties": {
            "type": "string",
            "description": "HTTP头部值"
          }
        },
        "aiChat.customBodyFields": {
          "type": "object",
          "default": {},
          "description": "自定义请求体字段，会与默认字段合并发送",
          "scope": "application",
          "additionalProperties": {
            "type": "string",
            "description": "Body数据字段值"
          }
        },
        "aiChat.overrideDefaultBody": {
          "type": "boolean",
          "default": false,
          "description": "是否完全覆盖默认请求体。开启后，将只发送自定义body字段"
        },
        "aiChat.enableStream": {
          "type": "boolean",
          "default": true,
          "description": "启用流式响应，可以实时看到AI的回复过程"
        },
        "aiChat.enableTools": {
          "type": "boolean",
          "default": true,
          "description": "启用工具调用功能，允许AI使用文件操作等工具"
        },
        "aiChat.systemRole": {
          "type": "string",
          "default": "",
          "description": "AI助手角色设定，会作为系统消息添加到对话开头，例如：你现在是一个开发专家",
          "scope": "application"
        },
        "aiChat.mcpServers": {
          "type": "array",
          "default": [],
          "description": "MCP服务器配置列表（建议在对话框中打开Agent模式后进行添加或删除操作）",
          "scope": "application",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "MCP服务器名称",
                "minLength": 1
              },
              "type": {
                "type": "string",
                "enum": [
                  "stdio",
                  "sse",
                  "websocket"
                ],
                "description": "MCP服务器连接类型",
                "default": "stdio"
              },
              "stdio": {
                "type": "object",
                "description": "STDIO连接配置（当type为stdio时使用）",
                "properties": {
                  "command": {
                    "type": "string",
                    "description": "执行的命令",
                    "minLength": 1
                  },
                  "args": {
                    "type": "array",
                    "description": "命令参数",
                    "items": {
                      "type": "string"
                    },
                    "default": []
                  },
                  "cwd": {
                    "type": "string",
                    "description": "工作目录",
                    "default": "${workspaceFolder}"
                  },
                  "env": {
                    "type": "object",
                    "description": "环境变量",
                    "additionalProperties": {
                      "type": "string"
                    },
                    "default": {}
                  }
                },
                "required": [
                  "command"
                ],
                "additionalProperties": false
              },
              "sse": {
                "type": "object",
                "description": "SSE连接配置（当type为sse时使用）",
                "properties": {
                  "url": {
                    "type": "string",
                    "description": "SSE连接URL",
                    "minLength": 1
                  },
                  "headers": {
                    "type": "object",
                    "description": "SSE请求头",
                    "additionalProperties": {
                      "type": "string"
                    },
                    "default": {}
                  }
                },
                "required": [
                  "url"
                ],
                "additionalProperties": false
              },
              "websocket": {
                "type": "object",
                "description": "WebSocket连接配置（当type为websocket时使用）",
                "properties": {
                  "url": {
                    "type": "string",
                    "description": "WebSocket连接URL",
                    "minLength": 1
                  },
                  "headers": {
                    "type": "object",
                    "description": "WebSocket请求头",
                    "additionalProperties": {
                      "type": "string"
                    },
                    "default": {}
                  }
                },
                "required": [
                  "url"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "name",
              "type"
            ],
            "additionalProperties": false
          }
        },
        "aiChat.enabledTools": {
          "type": "array",
          "default": [],
          "description": "启用的系统工具列表，为空则启用所有系统工具",
          "scope": "application",
          "items": {
            "type": "string",
            "enum": [
              "getProjectPath",
              "getCurrentFilePath",
              "getAllOpenFiles",
              "getCurrentSelection",
              "getCurrentLineContent",
              "getCursorInfo",
              "openFileToEdit",
              "fsReadFile",
              "fsWriteFile",
              "fsDelete",
              "fsRename",
              "fsCreateDirectory",
              "fsReadDirectory",
              "fsStat",
              "fsCopy",
              "fsEditFile",
              "fsSearchFiles"
            ],
            "minLength": 1
          }
        }
      }
    },
    "keybindings": [
      {
        "command": "aiChat.openChat",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiChat.configureSettings",
          "when": "view == aiChatView",
          "group": "navigation"
        },
        {
          "command": "aiChat.clearHistory",
          "when": "view == aiChatView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "aiChat.mcp.addServer",
          "group": "aiChat@1"
        },
        {
          "command": "aiChat.mcp.editServer",
          "group": "aiChat@2"
        },
        {
          "command": "aiChat.mcp.removeServer",
          "group": "aiChat@3"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile:webview": "tsc --project tsconfig.webview.json",
    "build": "npm run build:webview && npm run compile",
    "build:webview": "vite build",
    "dev:webview": "vite build --watch",
    "prepackage": "rimraf out && npm run build",
    "package": "vsce package",
    "prepublish": "npm run prepackage",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/eventsource": "^3.0.0",
    "@types/node": "18.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^4.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.4",
    "vite": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/highlight.js": "^9.12.4",
    "eventsource": "^3.0.7",
    "highlight.js": "^11.11.1",
    "marked": "^9.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
